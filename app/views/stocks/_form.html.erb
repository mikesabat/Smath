<%= form_for(@stock) do |f| %>
  <% if @stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

      <ul>
      <% @stock.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="field">
    <%= f.label :symbol %><br />
    <%= f.text_field :symbol %><br />

    <%= f.label "Announcement Timing" %><br />
    <%= f.select :timing, ["Not Set", "Before Open", "After Close"] %><br />

    <%= f.label "Next Earnings Date" %><br />
    <%= f.date_select :Quarter_1_date %>
  </div>
  
  <!-- 
  nested attributes from http://railscasts.com/episodes/196-nested-model-form-part-1
   -->
  <%= f.fields_for :quotes do |builder| %>
    <p>
      <%= builder.date_select :date %><br /> 
    </p>     
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>